{{#if seo.author}}
  <meta name="author" content="{{seo.author}}">
{{/if}}

{{#if seo.subject}}
  <meta name="subject" content="{{seo.subject}}"> {{! What type of website you'r having }}
{{/if}}

{{#if seo.description}}
  <meta name="Description" content="{{seo.description}}"> {{! Max 150 characters }}
{{/if}}

{{#if seo.classification}}
  <meta name="Classification" content="{{seo.classification}}"> {{! More detaild desciption }}
{{/if}}

{{#if seo.keywords}}
  <meta name="Keywords" content="{{seo.keywords}}"> {{! Keywords Max 200 characters }}
{{/if}}

{{#if seo.geography}}
  <meta name="Geography" content="{{seo.geography}}"> {{! Full address of owner }}
{{/if}}

{{#if ctx.localization.loc}}
  <meta name="Language" content="{{ctx.localization.loc}}"> {{! Language of page }}
{{/if}}

{{#if seo.copyright}}
  <meta name="Copyright" content="{{seo.copyright}}"> {{! Copyright }}
{{/if}}

{{#if seo.designer}}
  <meta name="Designer" content="{{seo.designer}}"> {{! Webmasters name }}
{{/if}}

{{#if seo.publisher}}
  <meta name="Publisher" content="{{seo.publisher}}"> {{! Owner, Webmaster, Copany's name }}
{{/if}}

{{#if seo.distribution}}
  <meta name="distribution" content="{{seo.distribution}}"> {{! Global or local }}
{{/if}}

{{#if seo.zipcode}}
  <meta name="zipcode" content="{{seo.zipcode}}">
{{/if}}

{{#if seo.city}}
  <meta name="city" content="{{seo.city}}">
{{/if}}

{{#if seo.country}}
  <meta name="country" content="{{seo.country}}">
{{/if}}
